#!/usr/bin/env bpftrace

BEGIN
{
        printf("Tracing SG_IO ioctl syscalls... Hit Ctrl-C to end.\n");
       
        printf("%-9s %-7s %-16s %-7s\n",
               "TIME", "COMM", "PID", "CMD");
}

kprobe:sd_get_unique_id
{
        time("%H:%M:%S  ");

        printf("%-7s %-16d\n",
               comm, pid
        );

}

